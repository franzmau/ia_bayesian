
public class game {

	int Board[][];
	final int length=6;
	final int wide= 7;
	final int cpu=2;
	final int player=1;
	
	public game(){
		Board= new int [length][wide];
	}
	public void start_game(){
		for (int i=0; i< length;i++){
			for(int j=0;j<wide;j++){
				Board[i][j]=0;
				System.out.print("[0] ");
				
			}
			
			System.out.print("\n");
		}
	
	}
	
	public boolean game_finished(){
		int auxP=0;
		int auxC=0;
		for (int i=length-1; i>=0;i--){
			for(int j=wide-1;j>=0;j--){
			if(Board[i][j]==1){
				auxP=1;
				auxC=0;
			}else if (Board[i][j]==2){
				auxC=0;
				auxP=1;
				
			}
			
			
			}
		}
			
		
		return false;
	}
}
