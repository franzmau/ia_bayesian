import java.util.HashMap;


public class Department {
private static final HashMap<String,Person> circleMap = new HashMap();

	   public static Person getCircle(String color) {
	      Employee circle = (Employee)circleMap.get(color);

	      if(circle == null) {
	         circle = new Employee(color);
	         circleMap.put(color, circle);
	         System.out.println("Creating circle of color : " + color);
	      }
	      return circle;
	   }
}